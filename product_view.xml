<?xml version="1.0"?>
<openerp>
    <data>        
        <record id="product_normal_form_view" model="ir.ui.view">
            <field name="name">base.product.defaults.product.form</field>
            <field name="model">product.product</field>
            <field name="inherit_id" ref="product.product_normal_form_view"/>
            <field name="arch" type="xml">
                <data>
                    <xpath
                        expr="//page[@string='Information']/group"
                        position="before">
                        <group>
                            <field name="model_id"/>
                        </group>
                    </xpath>
                </data>
            </field>
        </record>

        <record model="ir.ui.view" id="product_model_tree_view">
            <field name="name">product.model.tree</field>
            <field name="model">product.model</field>
            <field name="arch" type="xml">
                <tree string="Product Models">
                    <field name="name" select="1"/>
                </tree>
            </field>
        </record>

        <record model="ir.ui.view" id="product_model_form_view">
            <field name="name">product.model.form</field>
            <field name="model">product.model</field>
            <field name="arch" type="xml">
                <form string="Product Model">
                    <group>
                        <field name="name" select="1"/>                                        
                    </group>         
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_product_model_form">
            <field name="name">Product Model</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">product.model</field>
            <field name="view_type">form</field>
            <field name="view_mode">tree,form</field>
            <field name="view_id" ref="product_model_tree_view"/>
        </record>

        <menuitem name="Product Models" id="menu_product_models" parent="base.menu_base_config" action="action_product_model_form"/>
    </data>
</openerp>
